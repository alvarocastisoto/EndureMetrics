<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="@../css/styles.css" prefHeight="800.0" prefWidth="700.0"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.alvaro.garmin.controller.RegisterController">

    <VBox fx:id="tarjetaFormulario" alignment="CENTER" maxWidth="550.0" maxHeight="720.0"
        spacing="12.0"
        styleClass="card-form">
        <padding>
            <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
        </padding>

        <children>
            <Label text="Crear Cuenta" textFill="#1a202c">
                <font>
                    <Font name="System Bold" size="32.0" />
                </font>
            </Label>
            <Label text="Únete a Better Than Garmin" textFill="#718096">
                <font>
                    <Font size="15.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </Label>

            <HBox spacing="15.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Usuario" textFill="#4a5568">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" promptText="Tu nombre" />
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Correo Electrónico" textFill="#4a5568">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="emailField" promptText="ejemplo@correo.com" />
                </VBox>
            </HBox>

            <VBox spacing="5.0">
                <Label text="Confirmar Correo" textFill="#4a5568">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="confirmEmailField" promptText="Repite tu correo" />
            </VBox>

            <HBox spacing="15.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Contraseña" textFill="#4a5568">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" promptText="Mínimo 6 caracteres" />
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Confirmar Contraseña" textFill="#4a5568">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="confirmPasswordField" promptText="Repite contraseña" />
                </VBox>
            </HBox>

            <Label text="Datos Biométricos" textFill="#2d3748">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
                <VBox.margin>
                    <Insets top="15.0" bottom="5.0" />
                </VBox.margin>
            </Label>

            <HBox spacing="15.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Peso (kg)" textFill="#4a5568">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="pesoField" promptText="Ej: 75.5" />
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Altura (cm)" textFill="#4a5568">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="alturaField" promptText="Ej: 180" />
                </VBox>
            </HBox>

            <HBox spacing="15.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Fecha de Nac." textFill="#4a5568">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="fechaNacimientoPicker" promptText="Seleccionar"
                        maxWidth="1.7976931348623157E308" />
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Sexo" textFill="#4a5568">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="sexoComboBox" promptText="Seleccionar"
                        maxWidth="1.7976931348623157E308">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Hombre" />
                                <String fx:value="Mujer" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="5.0">
                <CheckBox fx:id="termsCheckBox" mnemonicParsing="false"
                    text="He leído y acepto los " textFill="#718096" />
                <Hyperlink text="términos y condiciones" textFill="#3182ce"
                    style="-fx-border-color: transparent; -fx-padding: 0; -fx-underline: true;" />
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </HBox>

            <Label fx:id="errorLabel" textFill="#e53e3e" visible="false" wrapText="true"
                textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>

            <HBox alignment="CENTER" spacing="20.0">
                <Button mnemonicParsing="false" onAction="#volverLogin" prefHeight="45.0"
                    prefWidth="160.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #718096; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-cursor: hand;"
                    text="Volver al Login">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onRegisterClick"
                    prefHeight="45.0" prefWidth="160.0"
                    styleClass="success" text="Registrarse">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Button>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </HBox>

        </children>
    </VBox>
</StackPane>